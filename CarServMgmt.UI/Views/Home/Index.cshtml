@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h1><i class="fas fa-tachometer-alt me-3"></i>Dashboard</h1>
    <p class="mb-0">Welcome to Car Service Management System</p>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="dashboard-card">
            <i class="fas fa-car fa-3x text-primary mb-3"></i>
            <h3>Total Cars</h3>
            <div class="number">@ViewBag.TotalCars</div>
            <p class="text-muted">Registered vehicles</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="dashboard-card">
            <i class="fas fa-user-friends fa-3x text-success mb-3"></i>
            <h3>Customers</h3>
            <div class="number">@ViewBag.TotalCustomers</div>
            <p class="text-muted">Active customers</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="dashboard-card">
            <i class="fas fa-tools fa-3x text-warning mb-3"></i>
            <h3>Service Records</h3>
            <div class="number">@ViewBag.TotalServiceRecords</div>
            <p class="text-muted">Service history</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="dashboard-card">
            <i class="fas fa-user-cog fa-3x text-info mb-3"></i>
            <h3>Mechanics</h3>
            <div class="number">@ViewBag.TotalMechanics</div>
            <p class="text-muted">Service technicians</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary">Quick Actions</h6>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Create", "Cars")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Car
                            </a>
                            <a href="@Url.Action("Create", "Customers")" class="btn btn-success">
                                <i class="fas fa-user-plus me-2"></i>Add New Customer
                            </a>
                            <a href="@Url.Action("Create", "ServiceRecords")" class="btn btn-warning">
                                <i class="fas fa-tools me-2"></i>Create Service Record
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-primary">System Status</h6>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>Database Connection</span>
                                <span class="badge badge-success">Connected</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>User Authentication</span>
                                <span class="badge badge-success">Active</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>API Services</span>
                                <span class="badge badge-success">Running</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>System Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">Current User</h6>
                    <p class="mb-1"><strong>@User.Identity?.Name</strong></p>
                    <p class="text-muted small">@string.Join(", ", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-primary">Application Info</h6>
                    <p class="mb-1"><strong>Version:</strong> 1.0.0</p>
                    <p class="mb-1"><strong>Framework:</strong> .NET 8.0</p>
                    <p class="mb-1"><strong>Database:</strong> Entity Framework Core</p>
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>Tip:</strong> Use the navigation menu to access different sections of the application.
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Administrative Functions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "Users")" class="btn btn-outline-primary w-100 mb-2">
                                <i class="fas fa-users me-2"></i>Manage Users
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Create", "Users")" class="btn btn-outline-success w-100 mb-2">
                                <i class="fas fa-user-plus me-2"></i>Create User
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="#" class="btn btn-outline-info w-100 mb-2">
                                <i class="fas fa-cog me-2"></i>System Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
