@model IEnumerable<CarServMgmt.Domain.ServiceRecord>

@{
    ViewData["Title"] = "Service Records Management";
}

<div class="page-header">
    <h1><i class="fas fa-tools me-3"></i>Service Records Management</h1>
    <p class="mb-0">Track vehicle maintenance and service history</p>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Service History</h5>
        @if (User.IsInRole("Admin") || User.IsInRole("Mechanic"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create Service Record
            </a>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="fas fa-car me-2"></i>Vehicle</th>
                        <th><i class="fas fa-user-cog me-2"></i>Mechanic</th>
                        <th><i class="fas fa-calendar me-2"></i>Date Brought In</th>
                        <th><i class="fas fa-clock me-2"></i>Hours</th>
                        <th><i class="fas fa-check-circle me-2"></i>Status</th>
                        <th><i class="fas fa-dollar-sign me-2"></i>Total Cost</th>
                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    {
                        <tr>
                            <td>
                                <strong>@item.Car?.RegistrationNumber</strong>
                                <br>
                                <small class="text-muted">@item.Car?.Customer?.Name</small>
                            </td>
                            <td>
                                <span class="badge badge-info">@item.Mechanic?.Name</span>
                            </td>
                            <td>
                                <i class="fas fa-calendar me-1"></i>@item.DateBroughtIn.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <span class="badge badge-warning">@item.Hours hours</span>
                            </td>
                            <td>
                                @if (item.IsComplete)
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-check me-1"></i>Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">
                                        <i class="fas fa-clock me-1"></i>In Progress
                                    </span>
                                }
                            </td>
                            <td>
                                <strong class="text-success">$@item.GetTotalCost().ToString("F2")</strong>
                            </td>
                            <td class="action-links">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye me-1"></i>Details
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Mechanic"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-tools fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No service records found</h5>
                <p class="text-muted">Start by creating the first service record.</p>
                @if (User.IsInRole("Admin") || User.IsInRole("Mechanic"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create First Record
                    </a>
                }
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Service Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <h4 class="text-primary">@Model.Count()</h4>
                        <small class="text-muted">Total Records</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-success">@Model.Count(s => s.IsComplete)</h4>
                        <small class="text-muted">Completed</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-warning">@Model.Count(s => !s.IsComplete)</h4>
                        <small class="text-muted">In Progress</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-calculator me-2"></i>Financial Summary</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4 class="text-success">$@Model.Sum(s => s.GetTotalCost()).ToString("F2")</h4>
                        <small class="text-muted">Total Revenue</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-info">@Model.Sum(s => s.Hours)</h4>
                        <small class="text-muted">Total Hours</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-user-shield me-2"></i>Access Control</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>View Service Records</span>
                        <span class="badge badge-success">Admin, Mechanic</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Create Service Records</span>
                        <span class="badge badge-info">Admin, Mechanic</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Edit Service Records</span>
                        <span class="badge badge-warning">Admin, Mechanic</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Delete Service Records</span>
                        <span class="badge badge-danger">Admin Only</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 