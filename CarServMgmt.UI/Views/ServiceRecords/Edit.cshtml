@model CarServMgmt.Domain.ServiceRecord

@{
    ViewData["Title"] = "Edit Service Record";
}

<h1>Edit Service Record</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CarId" class="control-label">Car</label>
        <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MechanicId" class="control-label">Mechanic</label>
        <select asp-for="MechanicId" class="form-control" asp-items="ViewBag.MechanicId"></select>
        <span asp-validation-for="MechanicId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hours" class="control-label"></label>
        <input asp-for="Hours" class="form-control" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsComplete" class="control-label"></label>
        <input asp-for="IsComplete" class="form-control" type="checkbox" />
        <span asp-validation-for="IsComplete" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateBroughtIn" class="control-label"></label>
        <input asp-for="DateBroughtIn" class="form-control" type="date" />
        <span asp-validation-for="DateBroughtIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateCompleted" class="control-label"></label>
        <input asp-for="DateCompleted" class="form-control" type="date" />
        <span asp-validation-for="DateCompleted" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 