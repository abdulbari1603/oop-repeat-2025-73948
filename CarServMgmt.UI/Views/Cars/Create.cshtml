@model CarServMgmt.Domain.Car

@{
    ViewData["Title"] = "Add New Car";
}

<div class="page-header">
    <h1><i class="fas fa-car me-3"></i>Add New Car</h1>
    <p class="mb-0">Register a new vehicle in the system</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Vehicle Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RegistrationNumber" class="form-label">
                                    <i class="fas fa-hashtag me-2"></i>Registration Number
                                </label>
                                <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" />
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CustomerId" class="form-label">
                                    <i class="fas fa-user me-2"></i>Customer
                                </label>
                                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                                    <option value="">-- Select Customer --</option>
                                </select>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Create Car
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Information</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>Note:</strong> Make sure to select the correct customer for this vehicle.
                </div>
                
                <h6 class="text-primary">Required Fields:</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Registration Number</li>
                    <li><i class="fas fa-check text-success me-2"></i>Customer Assignment</li>
                </ul>
                
                <h6 class="text-primary mt-3">Validation Rules:</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-info text-info me-2"></i>Registration number must be unique</li>
                    <li><i class="fas fa-info text-info me-2"></i>Customer must be selected</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 